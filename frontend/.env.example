# API Configuration
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# API Timeout Configuration (in milliseconds)
VITE_API_TIMEOUT_DEFAULT=10000        # 10 seconds for standard requests
VITE_API_TIMEOUT_LONG=30000          # 30 seconds for file uploads, data processing
VITE_API_TIMEOUT_SHORT=5000          # 5 seconds for auth checks, simple GETs
VITE_API_MAX_RETRIES=3               # Maximum number of retry attempts
VITE_API_RETRY_DELAY=1000            # Initial retry delay in ms (exponential backoff)

# Application Info
VITE_APP_NAME=Mobius Context Engineering Platform
VITE_APP_VERSION=0.1.0
VITE_ENVIRONMENT=development

# Optional: Analytics and Monitoring
# VITE_SENTRY_DSN=
# VITE_GOOGLE_ANALYTICS_ID=

# Optional: Feature Flags (comma-separated)
# VITE_FEATURE_FLAGS=new_ui,beta_features
